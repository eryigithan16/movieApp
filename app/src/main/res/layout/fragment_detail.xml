<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".view.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/textMovieDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ivBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            android:fontFamily="@font/ubuntu_bold"
            android:includeFontPadding="false"
            android:text="Movie Detail"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutImageAndCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textMovieDetail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDirector"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/colorMovieItem">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <ImageView
                        android:src="@drawable/ic_director"
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextHint"
                        android:text="Director"/>
                    <TextView
                        android:id="@+id/tvDirectorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Director Name"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scrollHorizontally="true"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRuntime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cardDirector"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/colorMovieItem">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <ImageView
                        android:src="@drawable/ic_duration"
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextHint"
                        android:text="Duration"/>
                    <TextView
                        android:id="@+id/tvRuntime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Runtime"
                        android:padding="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImdb"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cardRuntime"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/colorMovieItem">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <ImageView
                        android:src="@drawable/ic_imdb"
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextHint"
                        android:text="Rating"/>
                    <TextView
                        android:id="@+id/tvImdbRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number"
                        android:padding="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/detailImage"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:shapeAppearanceOverlay="@style/ImageCornerStyle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvDetailMovieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layoutImageAndCards"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/white"
            android:text="Movie Name"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"/>
        <TextView
            android:id="@+id/tvDetailGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvDetailMovieTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/white"
            android:text="Movie Genre"/>
        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorMovieItem"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvDetailGenre"/>
        <TextView
            android:id="@+id/textSynopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/viewLine"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/white"
            android:text="Synopsis"/>
        <TextView
            android:id="@+id/tvDetailSynopsis"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/textSynopsis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/layoutDetail"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:textSize="14sp"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/white"
            android:text="Movie Synopsis"
            android:scrollbars="vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/pbDetail"
        android:theme="@style/ProgressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tvDetailError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:fontFamily="@font/ubuntu_regular"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>